{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://semantiva.org/schema/eir_v1.schema.json",
  "title": "Semantiva EIR v1 (Execution Intermediate Representation)",
  "$defs": {
    "CPSV1_CanonicalJsonValue": {
      "anyOf": [
        { "type": "null" },
        { "type": "boolean" },
        { "type": "number" },
        { "type": "string" },
        { "type": "array", "items": { "$ref": "#/$defs/CPSV1_CanonicalJsonValue" } },
        {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/CPSV1_CanonicalJsonValue" }
        }
      ]
    },
    "CPSV1_SourceRefV1": {
      "type": "string",
      "minLength": 1,
      "pattern": "^(channel|context):[A-Za-z0-9_\\-.]+$"
    },
    "CPSV1_PublishV1": {
      "type": "object",
      "additionalProperties": false,
      "required": ["channels", "context_key"],
      "properties": {
        "channels": {
          "type": "object",
          "additionalProperties": { "type": "string", "minLength": 1 },
          "required": ["out"],
          "properties": { "out": { "type": "string", "minLength": 1 } }
        },
        "context_key": { "type": ["string", "null"], "minLength": 1 }
      }
    },
    "CPSV1_BindMapV1": {
      "type": "object",
      "additionalProperties": { "$ref": "#/$defs/CPSV1_SourceRefV1" },
      "required": ["data"],
      "properties": { "data": { "$ref": "#/$defs/CPSV1_SourceRefV1" } }
    },
    "CPSV1_CanonicalNodeV1": {
      "type": "object",
      "additionalProperties": false,
      "required": [
        "node_uuid",
        "role",
        "processor_ref",
        "parameters",
        "ports",
        "derive",
        "bind",
        "publish",
        "declaration_index",
        "declaration_subindex"
      ],
      "properties": {
        "node_uuid": { "type": "string", "minLength": 1, "format": "uuid" },
        "role": { "type": "string", "minLength": 1, "default": "processor" },
        "processor_ref": { "type": "string", "minLength": 1 },
        "parameters": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/CPSV1_CanonicalJsonValue" }
        },
        "ports": {
          "type": "object",
          "additionalProperties": { "$ref": "#/$defs/CPSV1_CanonicalJsonValue" }
        },
        "derive": {
          "anyOf": [
            { "type": "null" },
            {
              "type": "object",
              "required": ["version"],
              "properties": { "version": { "type": "integer", "minimum": 1 } },
              "additionalProperties": { "$ref": "#/$defs/CPSV1_CanonicalJsonValue" }
            }
          ]
        },
        "bind": { "$ref": "#/$defs/CPSV1_BindMapV1" },
        "publish": { "$ref": "#/$defs/CPSV1_PublishV1" },
        "declaration_index": { "type": "integer", "minimum": 0 },
        "declaration_subindex": { "type": "integer", "minimum": 0 }
      }
    },
    "CanonicalPipelineSpecV1_Embedded": {
      "type": "object",
      "additionalProperties": false,
      "required": ["version", "nodes"],
      "properties": {
        "version": { "const": 1 },
        "nodes": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/CPSV1_CanonicalNodeV1" }
        }
      }
    },
    "DerivedEdgeV1_Embedded": {
      "type": "object",
      "additionalProperties": false,
      "required": ["source_node_uuid", "target_node_uuid", "target_param", "source_ref"],
      "properties": {
        "source_node_uuid": { "type": "string", "minLength": 1, "format": "uuid" },
        "target_node_uuid": { "type": "string", "minLength": 1, "format": "uuid" },
        "target_param": { "type": "string", "minLength": 1 },
        "source_ref": { "$ref": "#/$defs/CPSV1_SourceRefV1" },
        "source_output_slot": { "type": "string", "minLength": 1, "default": "out" }
      }
    },
    "EIR_DerivedBlockV1": {
      "type": "object",
      "additionalProperties": false,
      "required": ["edges", "plan", "diagnostics"],
      "properties": {
        "edges": {
          "type": "array",
          "items": { "$ref": "#/$defs/DerivedEdgeV1_Embedded" }
        },
        "plan": { "type": "array", "items": { "type": "object" } },
        "diagnostics": { "type": "array", "items": { "type": "object" } }
      }
    }
  },
  "type": "object",
  "additionalProperties": false,
  "required": ["eir_version", "identity", "graph", "plan"],
  "properties": {
    "eir_version": { "const": 1 },

    "build": {
      "type": "object",
      "additionalProperties": false,
      "required": ["semantiva_version", "compiler_version", "created_at"],
      "properties": {
        "semantiva_version": { "type": "string", "minLength": 1 },
        "compiler_version": { "type": "string", "minLength": 1 },
        "created_at": { "type": "string", "format": "date-time" }
      }
    },

    "source": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "kind": { "type": "string", "minLength": 1 },
        "pipeline_spec_fingerprint": { "type": "string", "minLength": 1 }
      }
    },

    "identity": {
      "type": "object",
      "additionalProperties": false,
      "required": ["pipeline_id", "pipeline_variant_id", "eir_id"],
      "properties": {
        "pipeline_id": { "type": "string", "minLength": 1 },
        "pipeline_variant_id": { "type": "string", "minLength": 1 },
        "eir_id": { "type": "string", "minLength": 1 }
      }
    },

    "canonical_pipeline_spec": {
      "description": "CPSV1 meaning layer embedded for payload algebra execution; optional for backward-compatible scalar EIR.",
      "$ref": "#/$defs/CanonicalPipelineSpecV1_Embedded"
    },

    "derived": {
      "description": "Compiler-produced non-normative artifacts (excluded from identity hashing).",
      "$ref": "#/$defs/EIR_DerivedBlockV1"
    },

    "graph": {
      "type": "object",
      "additionalProperties": false,
      "required": ["graph_version", "nodes", "edges"],
      "properties": {
        "graph_version": { "type": "integer" },
        "nodes": { "type": "array", "items": { "type": "object" } },
        "edges": { "type": "array", "items": { "type": "object" } }
      }
    },

    "parameters": {
      "type": "object",
      "additionalProperties": false,
      "required": ["objects"],
      "properties": {
        "objects": { "type": "object", "additionalProperties": true }
      }
    },

    "plan": {
      "type": "object",
      "additionalProperties": false,
      "required": ["plan_version", "segments"],
      "properties": {
        "plan_version": { "type": "integer", "const": 1 },
        "segments": {
          "type": "array",
          "minItems": 1,
          "items": {
            "anyOf": [
              {
                "type": "object",
                "additionalProperties": false,
                "required": ["kind", "node_order"],
                "properties": {
                  "kind": { "type": "string", "const": "classic_linear" },
                  "node_order": {
                    "type": "array",
                    "minItems": 1,
                    "items": { "type": "string", "minLength": 1 }
                  }
                }
              },
              {
                "type": "object",
                "additionalProperties": true,
                "required": ["kind"],
                "properties": {
                  "kind": { "type": "string", "minLength": 1 }
                }
              }
            ]
          }
        }
      }
    },

    "semantics": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "payload_forms": {
          "type": "object",
          "additionalProperties": false,
          "required": ["version", "root_form", "terminal_form", "node_io"],
          "properties": {
            "version": { "type": "integer", "const": 1 },
            "root_form": { "type": "string", "enum": ["scalar", "channel", "lane_bundle"] },
            "terminal_form": { "type": "string", "enum": ["scalar", "channel", "lane_bundle"] },
            "node_io": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "additionalProperties": false,
                "required": ["processor_ref", "input_type", "output_type", "input_form", "output_form"],
                "properties": {
                  "processor_ref": { "type": "string" },
                  "input_type": { "type": ["string", "null"] },
                  "output_type": { "type": ["string", "null"] },
                  "input_form": { "type": "string", "enum": ["scalar", "channel", "lane_bundle"] },
                  "output_form": { "type": "string", "enum": ["scalar", "channel", "lane_bundle"] }
                }
              }
            }
          }
        },
        "slots": {
          "type": "object",
          "additionalProperties": false,
          "required": ["version", "node_slots"],
          "properties": {
            "version": { "type": "integer", "const": 1 },
            "node_slots": {
              "type": "object",
              "additionalProperties": {
                "type": "object",
                "additionalProperties": false,
                "required": ["declared_io", "inferred_slots"],
                "properties": {
                  "declared_io": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["input_type", "output_type"],
                    "properties": {
                      "input_type": { "type": ["string", "null"] },
                      "output_type": { "type": ["string", "null"] }
                    }
                  },
                  "inferred_slots": {
                    "type": "object",
                    "additionalProperties": false,
                    "required": ["inputs", "output"],
                    "properties": {
                      "inputs": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "additionalProperties": false,
                          "required": ["name", "type"],
                          "properties": {
                            "name": { "type": "string", "minLength": 1 },
                            "type": { "type": "string", "minLength": 1 }
                          }
                        }
                      },
                      "output": { "type": ["string", "null"] }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "lineage": { "type": "object", "additionalProperties": true }
  }
}
