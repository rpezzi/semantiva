{
  "$id": "https://semantiva.tech/schemas/trace/v1/pipeline_start_event_v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Semantiva Pipeline Start Event v1",
  "type": "object",
  "allOf": [
    {
      "$ref": "./trace_header_v1.schema.json"
    },
    {
      "type": "object",
      "properties": {
        "record_type": { "const": "pipeline_start" },
        "pipeline_id": { "type": "string", "minLength": 1 },
        "pipeline_spec_canonical": { "type": "object" },
        "meta": { "type": "object" }
      },
      "required": [
        "pipeline_id",
        "pipeline_spec_canonical"
      ],
      "additionalProperties": true
    }
  ]
}
