{
  "$id": "https://semantiva.tech/schemas/trace/v1/trace_header_v1.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Semantiva Trace Header v1",
  "type": "object",
  "properties": {
    "record_type": { "type": "string", "minLength": 1 },
    "schema_version": { "type": "integer", "const": 1 },
    "run_id": { "type": "string", "minLength": 1 },
    "timestamp": {
      "type": "string",
      "format": "date-time",
      "description": "Event timestamp in RFC3339/ISO-8601 with millisecond precision and 'Z' (UTC)."
    },
    "seq": { "type": "integer", "minimum": 0 }
  },
  "required": ["record_type", "schema_version", "run_id"],
  "additionalProperties": true
}
